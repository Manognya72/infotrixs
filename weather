# Main function to handle user input and execute the appropriate functionality
def main():
    while True:
        print("Weather Checking Application")
        print("1. Check weather by city name")
        print("2. Add city to favorite list")
        print("3. Remove city from favorite list")
        print("4. Display favorite list")
        print("5. Auto refresh weather data")
        print("6. Exit")
        choice = input("Enter your choice: ")
        if choice == "1":
            city = input("Enter city name: ")
            get_weather_by_city(city)
        elif choice == "2":
            city = input("Enter city name: ")
            add_to_favorite(city)
        elif choice == "3":
            city = input("Enter city name: ")
            remove_from_favorite(city)
        elif choice == "4":
            display_favorite_list()
        elif choice == "5":
            auto_refresh()
        elif choice == "6":
            break
        else:
            print("Invalid choice. Please try again.")

if __name__ == "__main__":
    main()
